{
  "name": "runic-anvil-back",
  "version": "1.0.0",
  "description": "The GraphQL API for the game Runic Anvil",
  "main": "index.js",
  "scripts": {
    "start": "nodemon src/app.js",
    "lint": "eslint . --fix",
    "lint:staged": "lint-staged",
    "test": "jest",
    "badges": "jest-coverage-badges",
    "docker:setup": "docker pull mongo",
    "docker:start": "docker run -d -p 27018:27017 --name runic_anvil_db mongo",
    "docker:stop": "docker stop runic_anvil_db && docker rm runic_anvil_db"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PuppedToy/Runic-Anvil-Back.git"
  },
  "author": "PuppedToy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PuppedToy/Runic-Anvil-Back.git/issues"
  },
  "homepage": "https://github.com/PuppedToy/Runic-Anvil-Back.git#readme",
  "dependencies": {
    "argon2": "^0.29.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "fs": "0.0.1-security",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.2",
    "morgan": "^1.10.0",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "eslint": "^8.24.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-jest": "^27.1.0",
    "jest": "^29.1.2",
    "jest-coverage-badges": "^1.1.2",
    "jest-extended": "^3.2.1",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.4",
    "pre-commit": "^1.2.2",
    "supertest": "^6.0.1"
  }
}
